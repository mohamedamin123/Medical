
        <?import javafx.scene.layout.VBox?>
        <?import javafx.scene.control.TableView?>
        <?import javafx.scene.control.Pagination?>
        <?import javafx.scene.control.TableColumn?>
        <?import javafx.scene.layout.AnchorPane?>
        <?import javafx.scene.control.TextField?>
        <?import javafx.scene.control.Label?>
        <?import javafx.scene.layout.HBox?>
        <?import javafx.scene.control.Button?>
<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.medical.controller.UIController.SecretaireControle">
<!-- Titre pour le tableau de bord Admin -->
<Label style="-fx-font-size: 24px;" text="Liste de Patients" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0" />

    <!-- Boutons pour "Annuler" et "Ajouter Patient" -->
    <HBox spacing="575.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0">
        <!-- Bouton Annuler -->
        <Button fx:id="cancelButton" text="Annuler" />
        <!-- Bouton Ajouter Patient -->
        <Button fx:id="addPatientButton" text="Ajouter Secretaire" />
    </HBox>

<!-- Conteneur VBox pour organiser les éléments verticalement -->
<VBox spacing="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0" AnchorPane.bottomAnchor="60.0">
    <!-- Barre de recherche au-dessus du TableView -->
    <TextField fx:id="searchField" promptText="Rechercher..." />

    <!-- TableView pour les patients -->
    <TableView fx:id="patientTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="Id" />
            <TableColumn fx:id="cinColumn" prefWidth="115.0" text="CIN" />
            <TableColumn fx:id="nomColumn" prefWidth="152.0" text="Nom" />
            <TableColumn fx:id="dobColumn" prefWidth="237.0" text="Date de Naissance" />
            <TableColumn fx:id="phoneColumn" minWidth="0.0" prefWidth="175.0" text="Phone" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <!-- Contrôle de pagination -->
    <Pagination fx:id="pagination" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
</VBox>
</AnchorPane>

