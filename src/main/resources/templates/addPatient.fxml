<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.css.Stylesheet?>
<AnchorPane stylesheets="@../static/style/addPatient.css"
            prefHeight="600.0" prefWidth="1275.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.medical.controller.UIController.AddPatient">
    <!-- Main layout -->
    <VBox spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <!-- Sexe section centered at the top -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Sexe:" />
            <HBox alignment="CENTER" spacing="10">
                <RadioButton fx:id="Homme" selected="true" text="Homme">
                    <toggleGroup>
                        <ToggleGroup fx:id="sexe" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="Femme" text="Femme">
                    <toggleGroup>
                        <fx:reference source="sexe" />
                    </toggleGroup>
                </RadioButton>
            </HBox>
        </VBox>

        <!-- Fields and notes section -->
        <GridPane hgap="10" vgap="10">
            <!-- Define column constraints to make both columns equal width -->
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="200" />
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="200" />
            </columnConstraints>

            <!-- Left side with fields -->
            <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">

                <Label text="PrÃ©nom: * (Obligatoire)" styleClass="label-bold"/>
                <TextField fx:id="prenomField" promptText="Prenom"/>

                <Label text="Nom: * (Obligatoire)" styleClass="label-bold"/>
                <TextField fx:id="nomField" promptText="Nom" />

                <Label text="CIN:" styleClass="label-bold"/>
                <TextField fx:id="CINField" promptText="CIN"/>

                <Label text="Date de Naissance : * (Obligatoire)" styleClass="label-bold"/>
                <DatePicker fx:id="dobField" prefHeight="24.0" prefWidth="581.0" promptText="Date de naissance" />

                <Label text="Telephone: * (Obligatoire)" styleClass="label-bold"/>
                <TextField fx:id="TelField" promptText="Telephone" />

                <Label text="Email:" styleClass="label-bold"/>
                 <TextField fx:id="emailField" promptText="Email"/>

                <Label text="Ville:" styleClass="label-bold"/>
                <TextField fx:id="villeField" promptText="ville"/>

                <Label text="Remboursement:" styleClass="label-bold"/>
                <ComboBox fx:id="batimentComboBox" prefHeight="24.0" prefWidth="539.0" promptText="Choisir :">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="CNAM" />
                            <String fx:value="assurance" />
                            <String fx:value="aucun" />

                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Identifiant unique:" styleClass="label-bold"/>
                <TextField fx:id="codeField" promptText="Code unique" />
            </VBox>

            <!-- Right side with notes -->
            <!-- Right side with notes -->
            <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
                <Label text="Bloc-Notes:" styleClass="label-bold"/>
                <TextArea fx:id="notesField" prefHeight="300" prefWidth="750.0" />

                <Label text="Dossier Medical:" styleClass="label-bold"/>
                <Button fx:id="chargerFichierButton" onAction="#handleChargerFichier" text="Charger fichier" />

                <VBox fx:id="fileListContainer" spacing="5" />
            </VBox>

            <rowConstraints>
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Buttons at the bottom center -->
        <HBox alignment="CENTER" spacing="20">
            <Button fx:id="annulerButton" text="Annuler" />
            <Button fx:id="saveButton" text="Enregistrer" />
            <VBox.margin>
                <Insets bottom="20.0" top="30.0" />
            </VBox.margin>
        </HBox>
    </VBox>


</AnchorPane>
