<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="534.0" prefWidth="722.0" stylesheets="@../static/style/rendez_vous.css"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.medical.controller.UIController.autre.RendezVousController"
      styleClass="main-container">
    <!-- Title -->
    <Label styleClass="title" text="Calendrier des Rendez-vous">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <!-- Date Picker -->
    <DatePicker fx:id="datePicker" promptText="SÃ©lectionnez une date" styleClass="date-picker" />

    <!-- TableView for Appointments -->
    <TableView fx:id="appointmentTable" styleClass="appointment-table">
        <columns>
            <TableColumn fx:id="jourColumn" prefWidth="100" text="Jour" />
            <TableColumn fx:id="heureColumn" prefWidth="100" text="Heure" />
            <TableColumn fx:id="patientColumn" prefWidth="200" text="Nom du Patient" />
            <TableColumn fx:id="motifColumn" prefWidth="300" text="Motif" />
        </columns>
    </TableView>

    <!-- Buttons for Actions -->
    <HBox alignment="CENTER" spacing="10" styleClass="button-container">
        <Button onAction="#retour" text="Retour" styleClass="button-back"/>
        <Button onAction="#handleAddRendezVous" text="Ajouter" styleClass="button-add"/>
        <Button onAction="#handleEditRendezVous" text="Modifier" styleClass="button-edit"/>
        <Button onAction="#handleDeleteRendezVous" text="Supprimer" styleClass="button-delete"/>
    </HBox>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
