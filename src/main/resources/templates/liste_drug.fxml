<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="263.0" minWidth="395.0" spacing="10" stylesheets="@../static/style/drugSearch.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.medical.controller.UIController.autre.ListeDrugController">

    <Label styleClass="label" text="Drug Search" />

    <TextField fx:id="searchBar" promptText="Enter active ingredient..." styleClass="text-field" />

    <Button onAction="#onSearchClicked" styleClass="button" text="Search" />

    <Label fx:id="resultLabel" text="Les résultats seront affichés ici" />

    <VBox fx:id="drugInfoContainer" spacing="5" />
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
