<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="600.0" prefWidth="905.0" stylesheets="@../static/style/liste_medecin.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.medical.medical.controller.UIController.autre.ListeDrugController">
    <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 24px;" styleClass="titre" text="Liste des Médicaments" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
        <font>
            <Font name="Chilanka Regular" size="24.0" />
        </font>
    </Label>

    <VBox spacing="10.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="100.0">
        <TextField fx:id="searchField" promptText="Rechercher..." styleClass="text-field">
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </TextField>

        <TableView fx:id="drugTable" styleClass="table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="ingredientActif" text="Ingrédient Actif" />
                <TableColumn fx:id="usage" prefWidth="200.0" text="Usage" />
                <TableColumn fx:id="avertissements" prefWidth="150.0" text="Avertissements" />
                <TableColumn fx:id="ingredientsInactifs" prefWidth="150.0" text="Ingrédients Inactifs" />
                <TableColumn fx:id="posologieEtAdministration" prefWidth="150.0" text="Posologie et Administration" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Pagination fx:id="pagination" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
    </VBox>
</AnchorPane>
